{
	"compilerOptions": {
		"rootDir": ".",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"lib": ["DOM", "DOM.Iterable", "ES2020", "ESNext"],
		"types": ["bun-types"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "ES2020",
		"sourceMap": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		".eslintrc.cjs",
		"**/*.css",
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.tsx",
		"public",
		"public/manifest.json",
		"postcss.config.cjs",
		"tailwind.config.cjs",
		"next.config.js",
		"theme.config.js",
		".eslintrc.js",
		".next/types/**/*.ts",
		"stylelint.config.cjs",
		"commitlint.config.cjs"
	],
	"exclude": ["node_modules/", "dist/", "__tests__/**/*"]
}
