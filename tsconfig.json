{
	"compilerOptions": {
		"rootDir": "./src",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "ES2020",
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
	],
	"exclude": [
		"node_modules/",
		"dist/",
		"__tests__/**/*",
		".eslintrc.cjs",
	]
}
